<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353531">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tvSignupWelcome"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Welcome"
            android:textColor="#FBFBFF"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/etSEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:autofillHints="emailAddress"
            android:ems="10"
            android:hint="E-mail address"
            android:textColor="#FBFBFF"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:textColorHint="@color/whiteTransparent"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/etSPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:autofillHints="password"
            android:ems="10"
            android:hint="Password"
            android:textColor="#FBFBFF"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="@color/whiteTransparent"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/etSConfPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="Confirm password"
            android:textColor="#FBFBFF"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="@color/whiteTransparent"
            tools:ignore="TextContrastCheck"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnSSigned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Sign up with email"
            tools:ignore="TextContrastCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/pretvRedirectLogin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Already have an account? "
                android:gravity="center"
                android:textColor="#FBFBFF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvRedirectLogin"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRedirectLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/sign_in"
                android:textColor="#FBFBFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/pretvRedirectLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FBFBFF"
            android:text="@string/or"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_singIn_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
